<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/common_background_color</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RedRectangleBg">
        <item name="android:background">@drawable/red_rectangle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/red_rectangle_minheight</item>
        <item name="android:textSize">@dimen/red_rectangle_text_size</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/splash_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/splash_symbol_margin_top"
        android:text="@string/symbolic_a"
        android:includeFontPadding="false"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/symbolic_a_text_size" />

    <RelativeLayout
        android:layout_width="@dimen/splash_icon_margin_top"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/splash_icon_margin_top"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/splash_icon_size"
            android:layout_height="@dimen/splash_icon_size"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_man" />

        <ImageView
            android:layout_width="@dimen/splash_icon_size"
            android:layout_height="@dimen/splash_icon_size"
            android:layout_alignParentEnd="true"
            android:baselineAlignBottom="@id/splash_symbol"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_woman" />

    </RelativeLayout>

</FrameLayout>